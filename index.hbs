{{!< default}}
    {{!-- The tag above means: insert everything in this file into the {body} of the default.hbs template --}}
    {{!-- The big featured header, it uses blog cover image as a BG if available --}} 

    {{#get "users" filter="slug:preslav" limit="1" as |author|}}
    {{#foreach author}}
    <header class="site-header outer" style="background-image: url(https://images.unsplash.com/photo-1462965326201-d02e4f455804?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=1650&q=80)">
        <div class="inner">
            <div class="site-header-content">
                {{#if profile_image}}
                <img class="author-profile-image" src="{{profile_image}}" alt="{{name}}" style="width:150px; height:150px"/>
                {{/if}}
                <h1 class="site-title" style="background-color: #323232; opacity: 0.8; padding: 1rem">Preslav Rachev</h1>
                {{#if bio}}
                <h2 class="author-bio" style="background-color: #323232; padding: 1rem">
                    I am a software engineer fighting data science, a marathon-wannabe, a hobby musician, and photographer.
                    I mostly write about <a href="/tag/programming">programming</a> and <a href="/tag/">developer culture</a>
                </h2>
                {{/if}}
                <div class="author-meta">
                    {{#if location}}
                    <div class="author-location">{{location}} <span class="bull">&bull;</span></div>
                    {{/if}}
                </div>
            </div>
            {{> "site-nav"}}
        </div>
    </header>
    {{/foreach}}
    {{/get}}

    {{!-- The main content area --}}
    <main id="site-main" class="site-main outer">
        <div class="inner">
            <div class="post-feed">
                {{#get "posts" filter="featured:true" limit="1" as |post|}}
                    {{#foreach post}}

                        {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
                        {{> "post-card"}}

                    {{/foreach}}
                {{/get}}
            </div>
            <h2>LATEST POSTS</h2>
            <hr>
            <div class="post-feed" style="margin-top: 0px">    

                {{#foreach posts}}

                {{!-- The tag below includes the markup for each post - partials/post-card.hbs --}}
                {{> "post-card"}}

                {{/foreach}}
            </div>

        </div>
    </main>
